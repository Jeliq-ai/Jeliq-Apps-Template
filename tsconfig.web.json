{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/web/",
    "types": [
      "vite/client"
    ],
    "jsx": "preserve",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "./api/**/*",
    "./src/services/api/**/*",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "vite.config.js",
    "./dist/**/*"
  ]
}
