{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/api/",
    "jsx": "preserve",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "./web/**/*",
    "./app/**/*",
    "./src/services/client/**/*",
    "next-env.d.ts",

    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "vite.config.js",
    "./dist/**/*",
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
